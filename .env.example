# PizzaMaestro Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Configuration
MONGO_ROOT_USERNAME=pizzamaestro
MONGO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD
MONGO_DATABASE=pizzamaestro

# Mongo Express (optional admin panel)
ME_BASICAUTH_USERNAME=admin
ME_BASICAUTH_PASSWORD=CHANGE_THIS_PASSWORD

# JWT Secret (minimum 256 bits / 32 characters for HS256)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OpenWeatherMap API (optional)
OPENWEATHER_API_KEY=

# Mail Configuration (optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# CORS
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
